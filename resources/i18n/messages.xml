<?xml version="1.0" encoding="ISO-8859-1" ?>
<messages>
  <message id="copyright-info">
  <div class="footer">
    ${footer}
  </div>
  </message>

  <message id="template.home">
  <div>
     <!-- Content Pane -->
      <div class="ngrt4n-content-pane">
        <h3>Welcome â€“ Getting Started in 3 Easy Steps</h3>
        <div class="ngrt4n-content">
          <!-- 1st thumnail -->
          <div class="span-one-third">
             <div class="thumbnail">
               <div class="title">Setup the business views for your target platforms</div>
               <img src="/images/built-in/thumbnails/editor.png" alt="RealOpInsight Editor" />
               <p>For each platform, the RealOpinsight Editor allows you to easily, and simply, describe
               the related services as well as the business rules that bind them to each other.
               </p>
               <p><a href="http://realopinsight.com/en/index.php/page/documentation"
               class="btn btn-info btn-sm" role="button" target="_blank">Learn more</a></p>
             </div>
          </div>

          <!-- 2nd thumnail -->
          <div class="span-one-third">
            <div class="thumbnail">
              <div class="title">Configure the access to your monitoring data</div>
              <img src="/images/built-in/thumbnails/setting.png" alt="RealOpInsight Editor" />
              <p>The setting menu from the management main menu allows you to easily set
              when and how to retrieve status data from your monitoring servers
              to keep your operations views up-to-date.
              </p>
              <p><a href="http://realopinsight.com/en/index.php/page/documentation"
              class="btn btn-info btn-sm" role="button" target="_blank">Learn more</a></p>
            </div>
          </div>

          <!-- Third thumnail -->
          <div class="span-one-third">
            <div class="thumbnail">
              <div class="title">Upload, preview and assign the views to your staff</div>
                <img src="/images/built-in/thumbnails/dashboard.png" alt="RealOpInsight Editor" />
                <p>The management menus also allow to upload, preview and assign views to users.
                Define who can access/operate your different business views.
                Take the maximum of the productivity of your operators, and enjoy !
                </p>
                <p><a href="http://realopinsight.com/en/index.php/page/documentation"
                class="btn btn-info btn-sm" role="button" target="_blank">Learn more</a></p>
            </div>
          </div>
        </div>
      </div>
      <!-- Quick Links Pane -->
      <div class="ngrt4n-side-pane">
        <h2>I'm ready</h2>

        <div class="ngrt4n-content">
          <!-- List actions -->
          <div class="span2 list-group">
            ${andhor-import-file}
            ${andhor-load-file}
          </div>
        </div>
      </div>

       <div class="footer fixed-footer">
          ${footer}
       </div>

    </div> <!-- content-container -->
  </message>

  <message id="operator-home.tpl">
  <div class="ngrt4n-operator-page">
       <!-- Content Pane -->
       <div class="ngrt4n-content-pane">
         <h3>Overview of service health</h3>
         <div class="ngrt4n-content">${contents}</div>
       </div>

       <!-- Event Feeds Pane -->
       <div class="ngrt4n-side-pane">
         <h3>Event Feeds</h3>
         <div class="ngrt4n-content">${event-feeds}</div>
       </div>

       <div class="footer fixed-footer">
          ${footer}
       </div>
    </div> <!-- content-container -->
  </message>

  <message id="dashboard-thumbnail.tpl">
     <div class="span2 thumbnail">
        <div class="title">${thumb-titlebar}</div>
        <div class="ngrt4n-thumbnail">${thumb-image}</div>
    </div>
  </message>

  <message id="event-feed.tpl">
    <div id="${event-feed-id}" class="event-feed-item">
      <div class="status-icon ${severity-css-class}">
        ${event-feed-status}
      </div>
      <div class="info">
        ${event-feed-title}
        <p>${event-feed-details}</p>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.field">
    <![CDATA[
    ${<if:{1}>}
    <div class="control-group">
      <label for="${id:{1}}" class="control-label">
        ${tr:Wt.Auth.{1}}
      </label>
      <div class="controls">${{1}}</div>
    </div>
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.template.login">
  <div class="ngrt4n-gradient login-container">
   <legend><img src="/images/built-in/logo.png" /></legend>
      <p>${tr:Wt.Auth.login-form-info}</p>

      <div class="form-horizontal">
        ${<if:passwords>}
          <div class="control-group">
            <label for="${id:user-name}" class="control-label">
              ${user-name-label}
            </label>
            <div class="controls">
              ${user-name}
            </div>
          </div>
          ${block:Wt.Auth.field password}
          <!-- ${block:Wt.Auth.field remember-me} -->
        ${</if:passwords>}

        ${<if:oauth>}
          <div class="control-group">
            <div class="controls">
              <p>Or login using:</p>
              ${icons}
            </div>
          </div>
        ${</if:oauth>}
        <div class="form-actions">
          <div>${login class="btn-primary"} <span>${lost-password class="btn-link"} ${sep} ${register class="btn-link"}</span></div>
        </div>
      </div>
      ${block:copyright-info}
    </div>
  </message>

  <message id="Wt.Auth.template.logged-in">
    <div class="row">
       <div class="logout-button">${logout-item}</div>
       ${main-ui}
    </div>
  </message>

  <message id="userForm-template">
    <div class="form-horizontal">
      ${info-box}
      <fieldset>
      ${<if:user-name>}
      <div class="control-group">
            <label for="${id:user-name}" class="control-label">Login*</label>
         <div class="controls">
              ${user-name} <span class="help-inline">${user-name-info}</span>
          </div>
      </div>
      ${</if:user-name>}

      ${<if:current-password>}
      <div class="control-group">
            <label for="${id:current-password}" class="control-label">Current password*</label>
         <div class="controls">
              ${current-password} <span class="help-inline">${current-password-info}</span>
          </div>
      </div>
      ${</if:current-password>}

      ${<if:password>}
      <div class="control-group">
            <label for="${id:password}" class="control-label">Password*</label>
         <div class="controls">
              ${password} <span class="help-inline">${change-password-link}</span><span class="help-inline">${password-info}</span>
          </div>
      </div>
      ${</if:password>}

      ${<if:confirm-password>}
      <div class="control-group">
            <label for="${id:confirm-password}" class="control-label">Verify password*</label>
         <div class="controls">
              ${confirm-password} <span class="help-inline">${confirm-password-info}</span>
          </div>
      </div>
      ${</if:confirm-password>}

      ${<if:first-name>}
      <div class="control-group">
      <label for="${id:first-name}" class="control-label">First name*</label>
        <div class="controls">
          ${first-name} <span class="help-inline">${first-name-info}</span>
        </div>
      </div>
     ${</if:first-name>}

     ${<if:last-name>}
     <div class="control-group">
          <label for="${id:last-name}" class="control-label">Last name*</label>
          <div class="controls">
            ${last-name} <span class="help-inline">${last-name-info}</span>
          </div>
      </div>
     ${</if:last-name>}

     ${<if:email>}
      <div class="control-group">
          <label for="${id:email}" class="control-label">Email*</label>
          <div class="controls">
            ${email} <span class="help-inline">${email-info}</span>
          </div>
      </div>
     ${</if:email>}

     ${<if:role>}
      <div class="control-group">
            <label for="${id:role}" class="control-label">User level*</label>
         <div class="controls">
              ${role} <span class="help-inline">${role-info}</span>
          </div>
      </div>
     ${</if:role>}

      ${<if:registration-date>}
      <div class="control-group">
            <label for="${id:registration-date}" class="control-label">Registration*</label>
         <div class="controls">
              ${registration-date} <span class="help-inline">${registration-date-info}</span>
          </div>
      </div>
      ${</if:registration-date>}
      </fieldset>
      <div class="row form-actions btn-group">
        <div class="controls">${submit-button} <span>${cancel-button}</span></div>
      </div>
    </div>
  </message>

  <message id="error-msg-div-tpl">
    <div class="alert alert-warning">${msg}</div>
  </message>

  <message id="success-msg-div-tpl">
    <div class="alert alert-success">${msg}</div>
  </message>

  <message id="user-list-tpl">
      <legend>${title}</legend>
      ${user-list}
  </message>
  
  <message id="user-mgnt-tpl">
    <div class="ngrt4n-content-pane">
      <div>${menu}</div>
      <div class="ngrt4n-content">${contents}</div>
    </div>
    <div class="footer fixed-footer">
       ${footer}
    </div>
  </message>

  <message id="copyright-footer.tpl">
    ${software} ${version} (${codename}). &copy; ${release-year} NGRT4N Project -
    <a href="http://realopinsight.com/en/index.php?page=legal" target="_blank">Terms &amp; Privacy</a>
  </message>

  <message id="view-assignment-tpl">
    <br />
    <div class="row">
      <div>${info-box}</div>
    </div>
    <div class="row">
      <div class="span3">${user-selector}</div>
      <div class="span2">&nbsp;</div>
      <div class="span3">&nbsp;</div>
    </div>
    <div class="row">
      <div class="span3">
        ${assigned-views}
      </div>
      <div class="span2">
        <div> ${button-assign}</div>
        <p>&nbsp;</p>
        <div>${button-revoke}</div>
      </div>
      <div class="span3">
        ${non-assigned-views}
      </div>
    </div>
    <div class="row">
      <div class="span3">&nbsp;</div>
      <div class="span2">${close-button}</div>
      <div class="span3">${delete-view-button}</div>
    </div>
  </message>

  <message id="statistic-tooltip.tpl">
     ${platform}
     -----------
     Unknown: ${unknown-ratio}% (${unknown-count}/${total-count})
     Critical: ${critical-ratio}% (${critical-count}/${total-count})
     Major: ${major-ratio}% (${major-count}/${total-count})
     Minor: ${minor-ratio}% (${minor-count}/${total-count})
     Normal: ${normal-ratio}% (${normal-count}/${total-count})
  </message>

  <message id="setting-page.tpl">
    <div class="form-horizontal">
    ${info-box}
      <div>
       <div class="row">
         <label class="control-label">Sources&nbsp;&nbsp;</label>
         <!--<div class="btn-group">-->
           <span>${s0}</span>
           <span>${s1}</span>
           <span>${s2}</span>
           <span>${s3}</span>
           <span>${s4}</span>
           <span>${s5}</span>
           <span>${s6}</span>
           <span>${s7}</span>
           <span>${s8}</span>
           <span>${s9}</span>
        <!-- </div> -->
       </div>
      </div>
      <div class="row">
        <label class="control-label">Monitor Type&nbsp;</label>
        <span>${monitor-type}</span>
      </div>
      <div class="row">
        <label class="control-label">Monitor Web URL&nbsp;</label>
        <span>${monitor-url}</span>
        <span>${dont-verify-ssl-certificate}</span>
      </div>
      <div class="row">
        <label class="control-label">Livestatus Address&nbsp;</label>
        <span>${livestatus-server}</span>
        <span>${use-ngrt4nd}</span>
      </div>
      <div class="row">
        <label class="control-label">Auth String&nbsp;</label>
        <span>${auth-string}</span>
        <span>${show-in-clear}</span>
      </div>
      <div class="row">
        <label class="control-label">Update Interval&nbsp;</label>
        <span>${update-interval}</span>
        <span>&nbsp;seconds</span>
      </div>

       <div class="form-actions btn-group">
          ${apply-change-button}
          ${add-as-source-button}
          ${delete-button}
          ${close-button}
     </div>
    </div>
  </message>

  <message id="about-tpl">
    <div>
     <div>
       <legend>${software}</legend>
       <p>A BSM dashboard software for complex IT environements.</p>
       <p>Version ${version} (codename: ${codename})<br />
         Release ID: ${release-id} <br/>
         Copyright &copy; 2010-${release-year} NGRT4N Project. All rights reserved.<br/>
         Visit <a href="${package-url}" target="_blank">${package-url}</a> for more information.
       </p>
       <p>Report Bugs: ${bug-report-email}</p>
     </div>
     <div style="float: right;">${close-button}</div>
    </div>
  </message>
</messages>
